<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_135sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp"
    android:layout_margin="@dimen/_4sdp"

    android:elevation="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_meals_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_135sdp"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.301"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@color/g_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/item_meals_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/item_meals_image"
            app:layout_constraintEnd_toEndOf="@id/item_meals_image"
            app:layout_constraintTop_toBottomOf="@id/item_meals_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/g_black"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/_15ssp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>